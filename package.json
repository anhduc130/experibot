{
  "name": "Experibot",
  "version": "1.0.0",
  "msteams": {
    "teamsAppId": "fa3e49b3-5bf1-46ea-bfc0-3e2fd370ed7f"
  },
  "description": "Microsoft Teams conversation bot quickstart",
  "author": "Microsoft",
  "license": "MIT",
  "main": "dist/application/index.js",
  "scripts": {
    "bns": "npm run build && npm start",
    "start": "node dist/application/index.js",
    "watch": "nodemon ./index.js",
    "dev": "ts-node-dev --respawn --debounce 2000 src/application/index.ts",
    "build": "tsc && ncp src/application/static/ dist/application/static/",
    "clean": "rimraf dist/",
    "rebuild": "npm run clean && npm run build",
    "prepublish": "npm run rebuild",
    "test": "mocha --require ts-node/register ./test/*.test.ts"
  },
  "dependencies": {
    "botbuilder": "^4.12.0",
    "botbuilder-dialogs": "^4.13.1",
    "dotenv": "^8.0.0",
    "express": "~4.17.1",
    "html-entities": "^1.3.1",
    "node-fetch": "^2.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.5.10",
    "@types/should": "^13.0.0",
    "@types/uuid": "^8.3.0",
    "mocha": "^8.3.2",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "testdouble": "^3.16.1",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.2.3"
  }
}
