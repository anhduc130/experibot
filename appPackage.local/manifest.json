{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.8/MicrosoftTeams.schema.json",
  "manifestVersion": "1.8",
  "version": "1.0.0",
  "id": "f8092768-9751-4d66-99a2-929f34ec8b1f",
  "packageName": "com.template.bot.ts",
  "developer": {
    "name": "Teams App, Inc.",
    "websiteUrl": "https://localhost:3000",
    "privacyUrl": "https://localhost:3000/privacy",
    "termsOfUseUrl": "https://localhost:3000/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Experibot",
    "full": "Experimental bot"
  },
  "description": {
    "short": "Short description for Conversation Bot.",
    "full": "Full description of Conversation Bot."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "f8092768-9751-4d66-99a2-929f34ec8b1f",
      "scopes": ["personal", "groupchat", "team"],
      "commandLists": [
        {
          "scopes": ["personal"],
          "commands": [
            {
              "title": "help",
              "description": "help"
            }
          ]
        }
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "composeExtensions": [
    {
      "botId": "f8092768-9751-4d66-99a2-929f34ec8b1f",
      "commands": [
        {
          "id": "demoAction",
          "type": "action",
          "context": ["compose"],
          "description": "Command to run action to create a Card from Compose Box",
          "title": "Demo card",
          "fetchTask": true,
          "taskInfo": {
            "url": "https://rlayserver.azurewebsites.net/bubble/",
            "width": "medium",
            "height": "medium"
          },
          "parameters": [
            {
              "name": "title",
              "title": "Card title",
              "description": "This is a demo action",
              "inputType": "text"
            },
            {
              "name": "subTitle",
              "title": "Subtitle",
              "description": "It has a subtitle",
              "inputType": "text"
            },
            {
              "name": "text",
              "title": "Text",
              "description": "Text for the card",
              "inputType": "textarea"
            }
          ]
        }
      ]
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "https://rlayserver.azurewebsites.net/meetings/sidePanel/configuration.html",
      "canUpdateConfiguration": true,
      "scopes": ["team", "groupchat"],
      "context": ["meetingSidePanel"]
    }
  ],
  "staticTabs": [
    {
      "contentUrl": "https://rlayserver.azurewebsites.net:443/bookings/?theme={theme}",
      "websiteUrl": "https://rlayserver.azurewebsites.net:443/bookings/?theme={theme}",
      "entityId": "StaticTab",
      "name": "My bookings static tab",
      "scopes": ["personal"]
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": ["localhost:3000", "i.imgur.com", "rlayserver.azurewebsites.net"]
}
