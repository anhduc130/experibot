{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.8/MicrosoftTeams.schema.json",
  "manifestVersion": "1.8",
  "version": "1.0.2",
  "id": "fa3e49b3-5bf1-46ea-bfc0-3e2fd370ed7f",
  "packageName": "com.template.bot.ts",
  "developer": {
    "name": "Teams App, Inc.",
    "websiteUrl": "https://localhost:3000",
    "privacyUrl": "https://localhost:3000/privacy",
    "termsOfUseUrl": "https://localhost:3000/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Experibot",
    "full": "Experimental bot"
  },
  "description": {
    "short": "Short description for Conversation Bot.",
    "full": "Full description of Conversation Bot."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "fa3e49b3-5bf1-46ea-bfc0-3e2fd370ed7f",
      "scopes": [
        "personal",
        "groupchat",
        "team"
      ],
      "commandLists": [
        {
          "commands": [
            {
              "description": "Get help",
              "title": "Help"
            }
          ],
          "scopes": [
            "personal"
          ]
        }
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "composeExtensions": [
    {
      "botId": "fa3e49b3-5bf1-46ea-bfc0-3e2fd370ed7f",
      "commands": [
        {
          "id": "demoAction",
          "type": "action",
          "context": [
            "compose"
          ],
          "description": "Command to run action to create a Card from Compose Box",
          "title": "Demo card",
          "fetchTask": true
        },
        {
          "id": "triggerPayment",
          "type": "action",
          "context": [
            "compose"
          ],
          "description": "Send a payment request",
          "title": "Send payment",
          "fetchTask": true
        }
      ]
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "https://rlay.feval.ca/meetings/sidePanel/configuration.html",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ],
      "context": [
        "meetingSidePanel"
      ]
    }
  ],
  "staticTabs": [
    {
      "contentUrl": "https://rlay.feval.ca:443/appointments/?theme={theme}",
      "entityId": "StaticTab",
      "name": "Appointments",
      "scopes": [
        "personal",
        "team"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "localhost:3000",
    "*.ngrok.io",
    "i.imgur.com",
    "rlay.feval.ca"
  ]
}